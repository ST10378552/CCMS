@{
    ViewData["Title"] = "Review Claims";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h2 class="display-4 mb-4 text-primary">Review Claims</h2>
        <p class="lead text-muted">Review and manage claims submitted by lecturers. Use the actions below to approve or reject each claim.</p>
    </div>

    <div class="row g-4">
        <!-- Claim Card Example -->
        <div class="col-md-6 col-lg-4">
            <div class="card claim-card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="me-3">
                            <img src="https://sortitoutsidospaces.b-cdn.net/megapacks/cutoutfaces/originals/2024.00/78090138.png" alt="Lecturer Photo" class="img-fluid rounded-circle border border-primary">
                        </div>
                        <div>
                            <h5 class="card-title mb-2 text-primary">Mike Smith</h5>
                            <p class="card-text mb-1 text-muted"><strong>Claim ID:</strong> 001</p>
                            <p class="card-text mb-1 text-muted"><strong>Hours Worked:</strong> 40</p>
                            <p class="card-text mb-1 text-muted"><strong>Hourly Rate:</strong> 40</p>
                            <p class="card-text mb-3"><strong>Total:</strong> R1600</p>
                        </div>
                    </div>
                    <div class="mb-4">
                        <a href="#" class="btn btn-info btn-sm rounded-pill shadow-sm" data-bs-toggle="tooltip" title="View Document">
                            <i class="bi bi-file-earmark-text"></i> View Document
                        </a>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-success btn-sm rounded-pill shadow-sm" data-bs-toggle="tooltip" title="Approve this claim">
                            <i class="bi bi-check-circle"></i> Approve
                        </button>
                        <button class="btn btn-danger btn-sm rounded-pill shadow-sm" data-bs-toggle="tooltip" title="Reject this claim">
                            <i class="bi bi-x-circle"></i> Reject
                        </button>
                    </div>
                </div>
            </div>
        </div>

      
        <div class="col-md-6 col-lg-4">
            <div class="card claim-card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="me-3">
                            <img src="https://i.pinimg.com/736x/7f/66/bf/7f66bf18d82d4ff818a950707f20c8cf.jpg" alt="Lecturer Photo" class="img-fluid rounded-circle border border-primary">
                        </div>
                        <div>
                            <h5 class="card-title mb-2 text-primary">Emilia Hart</h5>
                            <p class="card-text mb-1 text-muted"><strong>Claim ID:</strong> 002</p>
                            <p class="card-text mb-1 text-muted"><strong>Hours Worked:</strong> 30</p>
                            <p class="card-text mb-1 text-muted"><strong>Hourly Rate:</strong> R30</p>
                            <p class="card-text mb-3"><strong>Total:</strong> R900</p>
                        </div>
                    </div>
                    <div class="mb-4">
                        <a href="#" class="btn btn-info btn-sm rounded-pill shadow-sm" data-bs-toggle="tooltip" title="View Document">
                            <i class="bi bi-file-earmark-text"></i> View Document
                        </a>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-success btn-sm rounded-pill shadow-sm" data-bs-toggle="tooltip" title="Approve this claim">
                            <i class="bi bi-check-circle"></i> Approve
                        </button>
                        <button class="btn btn-danger btn-sm rounded-pill shadow-sm" data-bs-toggle="tooltip" title="Reject this claim">
                            <i class="bi bi-x-circle"></i> Reject
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Repeat as needed for additional claims -->
    </div>
</div>

<!-- Include Bootstrap Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.2/font/bootstrap-icons.min.css" />

<!-- Include Bootstrap's JavaScript for tooltips -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>

<style>
    /* General Styling */
    body {
        background-color: #f9fafc;
    }

    h2 {
        color: #007bff;
        font-weight: bold;
    }

    /* Claim Card Styling */
    .claim-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: linear-gradient(145deg, #ffffff, #f1f3f5);
    }

        .claim-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .text-muted {
        font-size: 0.9rem;
        color: #6c757d !important;
    }

    /* Button Customization */
    .btn {
        font-size: 0.85rem;
        font-weight: 600;
        padding: 0.4rem 1rem;
        transition: transform 0.2s ease;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
    }

        .btn-info:hover {
            background-color: #138496;
            transform: scale(1.05);
        }

    .btn-success:hover {
        transform: scale(1.05);
    }

    .btn-danger:hover {
        transform: scale(1.05);
    }

    .shadow-sm {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Tooltip Styling */
    [data-bs-toggle="tooltip"] {
        cursor: pointer;
    }

    .img-fluid {
        width: 80px;
        height: 80px;
    }
</style>
