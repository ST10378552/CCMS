@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <!-- Welcome Section -->
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-primary">Welcome to CCMS</h1>
        <p class="lead text-secondary mb-4">Your central platform for smooth claim management and streamlined administrative tasks.</p>
        <p class="text-muted mb-5">Discover how our platform simplifies your workflow and enhances productivity.</p>

        <!-- Call to Action buttons -->
        <div class="d-flex justify-content-center gap-3 mb-5">
            <a class="btn btn-primary btn-lg px-4 py-2 rounded-pill" href="@Url.Action("Login", "Account")" role="button">Get Started</a>
            <a class="btn btn-outline-primary btn-lg px-4 py-2 rounded-pill" href="@Url.Action("SubmitClaim", "Lecturer")" role="button">Submit Your Claim</a>
        </div>
    </div>

    <!-- Feature Highlights -->
    <div class="row text-center">
        <!-- Feature 1: Easy Claim Submission -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-lg rounded-4 p-4" style="background: linear-gradient(135deg, #6a11cb, #2575fc); color: white;">
                <div class="card-body">
                    <i class="bi bi-file-earmark-text display-4 mb-3"></i>
                    <h4 class="card-title fw-bold">Effortless Claim Submission</h4>
                    <p class="card-text">Submit claims quickly and easily with our streamlined process and document uploads.</p>
                </div>
            </div>
        </div>
        <!-- Feature 2: Efficient Approvals -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-lg rounded-4 p-4" style="background: linear-gradient(135deg, #ff416c, #ff4b2b); color: white;">
                <div class="card-body">
                    <i class="bi bi-check-circle display-4 mb-3"></i>
                    <h4 class="card-title fw-bold">Streamlined Approvals</h4>
                    <p class="card-text">Review and approve claims quickly with our efficient and user-friendly approval system.</p>
                </div>
            </div>
        </div>
        <!-- Feature 3: Track Claim Status -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-lg rounded-4 p-4" style="background: linear-gradient(135deg, #00b09b, #96c93d); color: white;">
                <div class="card-body">
                    <i class="bi bi-graph-up display-4 mb-3"></i>
                    <h4 class="card-title fw-bold">Real-Time Status Tracking</h4>
                    <p class="card-text">Track the status of your claims with up-to-date notifications and progress updates.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.2/font/bootstrap-icons.min.css" />

<!-- Include Bootstrap's JavaScript for responsiveness -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
