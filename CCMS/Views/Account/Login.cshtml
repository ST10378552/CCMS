@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <!-- Login Form Card -->
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Login</h2>

                <form method="post">
                    <!-- Username Field -->
                    <div class="form-group mb-3">
                        <label for="username" class="form-label">Username:</label>
                        <input type="text" class="form-control rounded-pill" id="username" name="username" placeholder="Enter username" required>
                    </div>

                    <!-- Password Field -->
                    <div class="form-group mb-4">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" class="form-control rounded-pill" id="password" name="password" placeholder="Enter password" required>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill btn-lg">Login</button>
                    </div>
                </form>

                <!-- Error Message Display -->
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-4 text-center">@ViewBag.Error</div>
                }

                <!-- Forgot Password Link -->
                <div class="text-center mt-3">
                    <a href="/Account/ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                </div>

                
                <hr class="my-4">

                <!-- Create Account Button -->
                <div class="text-center">
                    <span>Don't have an account?</span>
                    <a href="/Account/Register" class="btn btn-outline-primary rounded-pill btn-lg mt-3">Create Account</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap's JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
